# Menus
menu:
  首页: /
  目录: /archives
  #分类: /categories
  #Tags: /tags
  关于: /about

# Content
excerpt_link: 阅读更多
fancybox: true

# Customize
customize:
    logo:
        enabled: true
        width: 40
        height: 40
        url: images/avatar.png
    profile:
        enabled: true # Whether to show profile bar
        avatar: css/images/avatar.png
        gravatar: # Gravatar email address, if you enable Gravatar, your avatar config will be overriden
        author: 王春荣
        author_title: Android 服务器 前端开发
        location: 中国, 海南
        follow: https://github.com/mccapp
    highlight: androidstudio
    sidebar: right # sidebar position, options: left, right  左右布局切换方向
    thumbnail: true # enable posts thumbnail, options: true, false
    favicon: # path to favicon
    social_links:
        github: https://github.com/mccapp/
        twitter: https://twitter.com/
        facebook: https://www.facebook.com/
        dribbble: https://dribbble.com/
        rss: /atom.xml
    social_link_tooltip: false # enable the social link tooltip, options: true, false


# Widgets
widgets:
    - recent_posts
    - category
    - archive
    - tag
    - tagcloud
    - links


# Search
search:
    insight: false # you need to install `hexo-generator-json-content` before using Insight Search
    swiftype: yZdFdRak_TKurwCxNX6g # enter swiftype install key here
    #baidu: true # you need to disable other search engines to use Baidu search, options: true, false

# Comment
comment:
  #  disqus: hexo-theme-icarus # enter disqus shortname here
  #  duoshuo: icarus # enter duoshuo shortname here
    youyan: 2119666 # enter youyan uid here

# Share
share: options # options: jiathis, bdshare, addtoany, default

# Plugins
plugins:
    lightgallery: true # options: true, false
    justifiedgallery: true # options: true, false
    google_analytics:  # enter the tracking ID for your Google Analytics
    google_site_verification: # enter Google site verification code
    baidu_analytics: # enter Baidu Analytics hash key

# Miscellaneous
miscellaneous:
    open_graph: # see http://ogp.me
        fb_app_id:
        fb_admins:
        twitter_id:
        google_plus:
    links:
        Hexo: http://hexo.io


